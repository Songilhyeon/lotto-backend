// Prisma schema with full Cascade on foreign keys

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ================================
// Lotto Numbers
// ================================
model LottoNumber {
  drwNo          Int      @id // 회차 번호 (PK)
  drwNoDate      DateTime // 추첨일
  drwtNo1        Int
  drwtNo2        Int
  drwtNo3        Int
  drwtNo4        Int
  drwtNo5        Int
  drwtNo6        Int
  bnusNo         Int
  firstPrzwnerCo String
  firstWinamnt   String
  totSellamnt    String
  firstAccumamnt String

  // 신규 컬럼 (nullable)
  autoWin     Int?
  semiAutoWin Int?
  manualWin   Int?

  createdAt DateTime @default(now())

  stores LottoStore[] // 관계 연결
}

// ================================
// Lotto Store
// ================================
model LottoStore {
  id      Int    @id @default(autoincrement())
  drwNo   Int
  store   String
  address String
  rank    Int

  autoWin     Int? // 해당 판매점 자동 당첨자 수
  semiAutoWin Int? // 반자동
  manualWin   Int? // 수동

  lotto LottoNumber @relation(fields: [drwNo], references: [drwNo])

  @@unique([drwNo, store, address, rank])
}

// ================================
// User (소셜 로그인용)
// ================================
model User {
  id     String  @id @default(cuid())
  email  String? @unique
  name   String?
  avatar String?

  role                  UserRole  @default(FREE)
  subscriptionExpiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  payments Payment[]
  posts    Post[]
  comments Comment[]
  likes    Like[]

  // ✅ 추가
  histories History[]
  favorites Favorite[]
}

enum UserRole {
  FREE
  PREMIUM
}

// ================================
// Account
// ================================
model Account {
  id                String   @id @default(cuid())
  userId            String
  provider          String
  providerAccountId String
  accessToken       String?
  refreshToken      String?
  tokenType         String?
  scope             String?
  expiresAt         Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// ================================
// Payment
// ================================
model Payment {
  id        String        @id @default(cuid())
  userId    String
  amount    Int
  status    PaymentStatus
  startDate DateTime
  endDate   DateTime
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum PaymentStatus {
  success
  fail
  pending
}

// ================================
// Post
// ================================
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  comments       Comment[]
  likes          Like[]
  tags           PostTag[]
  category       PostCategory? @relation(fields: [postCategoryId], references: [id], onDelete: Cascade)
  postCategoryId String?

  @@index([userId])
}

// ================================
// Comment
// ================================
model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([postId])
}

// ================================
// Like
// ================================
model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

// ================================
// PostCategory
// ================================
model PostCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts Post[]
}

// ================================
// PostTag (N:M)
// ===============================
model PostTag {
  postId String
  tagId  String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

// ================================
// Tag
// ================================
model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts PostTag[]
}

// ================================
// VisitCounter
// ================================
model VisitCounter {
  id        Int      @id @default(autoincrement())
  count     Int      @default(0)
  lastVisit DateTime @default(now())
  createdAt DateTime @default(now())
}

// ================================
// History (회차별 번호점수 기록)
// ================================
model History {
  id        String   @id @default(cuid())
  userId    String
  round     Int
  numbers   String // JSON.stringify([1,2,3,4,5,6])
  score     Float?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([round])
}

// ================================
// Favorite (즐겨찾기 번호)
// ================================
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  name      String // 즐겨찾기 이름
  numbers   String // JSON.stringify([1,2,3,4,5,6])
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
