  status    PaymentStatus
  startDate DateTime
  endDate   DateTime
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum PaymentStatus {
  success
  fail
  pending
}

